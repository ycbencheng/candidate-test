<h3>Articles</h3>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Category</th>
      <th scope="col">Title</th>
      <th scope="col">Content</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.category %></td>
        <td><%= link_to article.title, article %></td>
        <td><%= truncate(article.content, :length => 20) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
