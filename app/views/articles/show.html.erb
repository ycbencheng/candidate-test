<h1 class='username'>Author: <%= @article.user.email%></h1>
<h3><%= @article.title %></h3>
<% if policy(@article).destroy? && policy(@article).edit? %>
  <p><%= link_to 'delete', article_path(@article), method: :delete, data: { confirm: 'Are you certain you want to delete this?' } %></p>
  <p><%= link_to 'edit', edit_article_path(@article) %></p>
  <% end %>
<p><%= @article.content %></p>
