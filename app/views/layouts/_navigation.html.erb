 <nav class="navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <%= link_to 'Home', root_path, class: 'navbar-brand' %>
      <%= link_to 'Articles', articles_path, class: 'navbar-brand' %>
      
      <%# Let a user create a new article if role is editor %>
      <% if current_user && current_user.role == 'editor' %>
        <%= link_to 'Create a new article', new_article_path, class: 'navbar-brand' %>
      <% end %>

      <%# Let a user create a new user if role is admin %>
      <% if current_user && current_user.role == 'admin' %>
        <%= link_to 'Create a new user', create_new_user_path, class: 'navbar-brand' %>
      <% end %>
    </div>
    <div id="navbar">
  
    <ul class="nav navbar-nav pull-right">
      <ul class="nav navbar-nav pull-right">
        <% if user_signed_in? %>
        <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li><%= link_to 'Log In', new_user_session_path %></li>
          <li><%= link_to 'Sign Up', new_user_registration_path %></li>
        <% end %>
      </ul>
    </ul>
  </div>
</nav>